<?xml version="1.0" encoding="utf-8"?>
<com.browser.ui.widget.jlist.JLBG xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <com.browser.ui.widget.jlist.JLTV
        android:id="@android:id/title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#434343"
        android:layout_marginLeft="12dp"
        />

    <com.browser.ui.widget.jlist.JLTV2
        android:id="@+id/SelectedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#6c6c6c"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        />

</com.browser.ui.widget.jlist.JLBG>